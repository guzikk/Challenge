<h1>Bets <%= @bets.name %></h1>
<p>Find me in app/views/bets/show.html.erb</p>
<%= @bets.user_owner.name %>
Name of Bet: <%= @bets.name %><br>
Description: <%= @bets.description %><br>
Stake: <%= @bets.credit %><br>
User Owner: <%= @bets.user_owner.email %><br>
User Participant:
<% if @bets.user_participant_id.blank? %>
      <div class="btn btn-default"><%= link_to("Join", {:action=>'join', :id=>@bets.id})%></div>
    <%else%>
    User Participant: <%= @bets.user_participant.email if !@bets.user_participant_id.blank? %><br><br><br>
   
        <%end%>
<h1>Users Posts</h1>

<% @bets.posts.each do |post| %>
    <!--image_tag if/else to time solve problem with default_url in paperclip --> 
    <h4><%= image_tag post.user.avatar.blank? ? 'missing.png' : post.user.avatar.url, class: "img-circle", width: "50px", height: "50px" %>    <%= post.user.email %> </h4>
  <p>
    <%= post.content %>
  </p>
<% end %>

<% if user_signed_in? %>
  <%= form_for(@post) do |f| %>
    <div class="field">
      <%= f.text_area :content, class: "backgroud_for_form_content" %>
      <%= f.hidden_field :bet_id, :value => "#{@bets.id}" %>
      <%= f.hidden_field :user_id, :value => "#{current_user.id}" %>
    </div>
    <div class="">
      <%= f.submit "Your Message" %>
    </div>
  <% end %>
<% end %>
